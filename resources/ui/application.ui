<interface>
  <!-- interface-name application.ui -->
  <requires lib="gtk" version="4.8"/>
  <template class="MainWindow" parent="GtkApplicationWindow">
    <property name="default-height">780</property>
    <property name="default-width">1024</property>
    <property name="show-menubar">True</property>
    <property name="title">KRust</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkPaned">
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <child>
              <object class="GtkScrolledWindow">
                <property name="min-content-width">250</property>
              </object>
            </child>
            <child>
              <object class="GtkStack" id="stMain">
                <child>
                  <object class="GtkStackPage" id="stkDefaultPage">
                    <property name="child">
                      <object class="GtkCenterBox">
                        <child type="center">
                          <object class="GtkLabel">
                            <property name="justify">center</property>
                            <property name="label">KRust Kafka Client</property>
                          </object>
                        </child>
                      </object>
                    </property>
                    <property name="name">stkDefaultPage</property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage" id="stkClusterPage">
                    <property name="child">
                      <object class="GtkGrid">
                        <child>
                          <object class="GtkActionBar">
                            <child>
                              <object class="GtkButton" id="btnAddCluster">
                                <property name="icon-name">list-add-symbolic</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="btnEditCluster">
                                <property name="icon-name">list-edit-symbolic</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="btnDeleteCluster">
                                <property name="icon-name">list-remove-symbolic</property>
                              </object>
                            </child>
                            <layout>
                              <property name="column">0</property>
                              <property name="column-span">1</property>
                              <property name="row">0</property>
                              <property name="row-span">1</property>
                            </layout>
                          </object>
                        </child>
                        <child>
                          <object class="GtkScrolledWindow">
                            <layout>
                              <property name="column">0</property>
                              <property name="column-span">1</property>
                              <property name="row">1</property>
                              <property name="row-span">1</property>
                            </layout>
                          </object>
                        </child>
                      </object>
                    </property>
                    <property name="name">stkClusterPage</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkRevealer">
            <property name="hexpand-set">True</property>
            <property name="vexpand-set">True</property>
            <child>
              <object class="GtkBox">
                <child>
                  <object class="GtkLabel"/>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
